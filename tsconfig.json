{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
          "@shared": [
           "src/shared"
          ],
        },
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "ignoreDeprecations": "5.0",
        
    },
    "exclude": [
        "node_modules"
    ]
}